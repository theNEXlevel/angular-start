{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@as-checklist": ["libs/checklists/checklist/src/index.ts"],
      "@as-home": ["libs/checklists/home/src/index.ts"],
      "@as-shared/data-access": ["libs/checklists/shared/data-access/src/index.ts"],
      "@as-shared/ui": ["libs/checklists/shared/ui/src/index.ts"],
      "@interfaces/*": ["libs/interfaces/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
